<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="app.controllers.ForgotController">
  <center>
    <VBox alignment="CENTER" spacing="8" style="-fx-background-color: #123456;" styleClass="container">
      <Text styleClass="title" text="Reset Password" />
      <TextField fx:id="txtUsernameOrEmail" promptText="Username or Email" />
      <Button onAction="#onReset" text="Reset" />
      <Button onAction="#onBack" text="Back" />
      <Text fx:id="txtMessage" />
    </VBox>
  </center>
</BorderPane>
