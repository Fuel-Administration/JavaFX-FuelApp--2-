            <TextField fx:id="email" promptText="Email" />
            <TextField fx:id="idNumber" promptText="ID number" />
            <TextField fx:id="username" promptText="Choose username" />
            <PasswordField fx:id="password" promptText="Password" />
            <PasswordField fx:id="passwordConfirm" promptText="Confirm password" />
            <HBox spacing="8">
               <children>
                  <VBox>
                     <children>
                        <Label text="Car Make" />
                        <ComboBox fx:id="cbCarMake" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Car Model" />
                        <ComboBox fx:id="cbCarModel" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <TextField fx:id="carReg" promptText="Car registration" />
            <Button onAction="#onSubmit" text="Submit" />
            <Button onAction="#onBack" text="Back" />
            <Text fx:id="txtMessage" />
         </children>
      </VBox>
   </children>
